<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Central - Manage Inventory</title>
  <link rel="stylesheet" href="/css/inventory.css ">
</head>

<body>
  <%- include('../partials/sell-header') %>

    <main>
      <section id="inventory">
        <div class="top">
          <h1>Manage Inventory</h1>
          <form action="#" method="get">
            <input type="text" name="search" autocomplete="off" placeholder="Search Inventory">
            <button type="submit">Search</button>
          </form>
        </div>
        <div class="bottom">
          <table>
            <tr>
              <th>Image</th>
              <th>Product Name</th>
              <th>ASIN</th>
              <th>Available</th>
              <th>Price & MRP</th>
              <th>Action</th>
            </tr>
            <% products.forEach(product=> { %>
              <tr>
                <td>
                  <img src="/uploads/<%= product.image %>">
                </td>
                <td>
                  <a href="/product/<%= product._id %>" target="_blank" rel="noopener noreferrer">
                    <%= product.title %>
                  </a>
                </td>
                <td>
                  <%= product._id %>
                </td>
                <td>
                  <input class="qty" type="number" name="quantity" value="<%= product.quantity %>">
                </td>
                <td>
                  <div class="group">
                    <div class="inp">
                      <svg viewBox="0 0 320 512">
                        <path
                          d="M308 96c6.627 0 12-5.373 12-12V44c0-6.627-5.373-12-12-12H12C5.373 32 0 37.373 0 44v44.748c0 6.627 5.373 12 12 12h85.28c27.308 0 48.261 9.958 60.97 27.252H12c-6.627 0-12 5.373-12 12v40c0 6.627 5.373 12 12 12h158.757c-6.217 36.086-32.961 58.632-74.757 58.632H12c-6.627 0-12 5.373-12 12v53.012c0 3.349 1.4 6.546 3.861 8.818l165.052 152.356a12.001 12.001 0 0 0 8.139 3.182h82.562c10.924 0 16.166-13.408 8.139-20.818L116.871 319.906c76.499-2.34 131.144-53.395 138.318-127.906H308c6.627 0 12-5.373 12-12v-40c0-6.627-5.373-12-12-12h-58.69c-3.486-11.541-8.28-22.246-14.252-32H308z" />
                      </svg>
                      <input type="text" name="price" value="<%= product.price %>">
                    </div>
                  </div>
                  <div class="group">
                    <div class="inp">
                      <svg viewBox="0 0 320 512">
                        <path
                          d="M308 96c6.627 0 12-5.373 12-12V44c0-6.627-5.373-12-12-12H12C5.373 32 0 37.373 0 44v44.748c0 6.627 5.373 12 12 12h85.28c27.308 0 48.261 9.958 60.97 27.252H12c-6.627 0-12 5.373-12 12v40c0 6.627 5.373 12 12 12h158.757c-6.217 36.086-32.961 58.632-74.757 58.632H12c-6.627 0-12 5.373-12 12v53.012c0 3.349 1.4 6.546 3.861 8.818l165.052 152.356a12.001 12.001 0 0 0 8.139 3.182h82.562c10.924 0 16.166-13.408 8.139-20.818L116.871 319.906c76.499-2.34 131.144-53.395 138.318-127.906H308c6.627 0 12-5.373 12-12v-40c0-6.627-5.373-12-12-12h-58.69c-3.486-11.541-8.28-22.246-14.252-32H308z" />
                      </svg>
                      <input type="text" name="mrp" value="<%= product.mrp %>">
                    </div>
                  </div>
                </td>
                <td>
                  <a href="/admin/product/save/<%= product._id %>">Save</a>
                  <a href="/admin/product/edit/<%= product._id %>">Edit</a>
                  <a href="/admin/product/delete/<%= product._id %>">Delete</a>
                </td>
              </tr>
              <% }) %>
          </table>
        </div>
      </section>
    </main>
</body>

</html>